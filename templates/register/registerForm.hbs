<form class="mt-2" action="#/register" method="post">
    <div class="form-group">
        <input type="text" name="username" class="form-control w-25 m-auto" placeholder="Username">
    </div>
    <div class="form-group">
        <input type="password" name="password" class="form-control w-25 m-auto d-inline" placeholder="Password">
    </div>
    <div class="form-group">
        <input type="password" name="repeatPassword" class="form-control w-25 m-auto d-inline" placeholder="Repeat Password">
    </div>
    <input type="submit" value="Register" class="btn btn-success btn-lg mt-2 mb-2 w-25">
</form>